<!DOCTYPE html>
<html>
  <head>
    <title>Boe's Beautiful Books </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="ui menu">
      <div class="item">
        <%= link_to root_path do %>
          <div class="ui primary button">Home</div>
        <% end %>
      </div>
      <% if not user_signed_in? %>
        <div class="item">
          <%= link_to new_user_registration_path do %>
            <div class="ui button">Sign up</div>
          <% end %>
        </div>
        <div class="item">
          <%= link_to new_user_session_path do %>
            <div class="ui button">Login</div>
          <% end %>
        </div>
      <% else %>
        <div class="item">
          <%= link_to users_path(current_user.id) do %>
            <div class="ui button">Profile</div>
          <% end %>
        </div>
        <div class="item">
          <%= link_to friends_path do %>
            <div class="ui button">Friends</div>
          <% end %>
        </div>
        <div class="item">
          <%= link_to conversations_path do %>
            <div class="ui button">Conversations</div>
          <% end %>
        </div>
        <div class="item">
          <%= link_to destroy_user_session_path do %>
            <div class="ui button">Logout</div>
          <% end %>
        </div>

        <div class="right menu">
          <div class="item">
            Logged in as <%=current_user.username%>
          </div>
        </div>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
